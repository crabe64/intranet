{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-12 text-left">
            <h1 class="text-no-color">Se connecter</h1>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login_signin') }}" method="post">
                <div class="form-group mt-3">
                    <label for="username">Adresse email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="password">Mot de passe:</label>
                    <input type="password" id="password" name="_password" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success btn-sm">Se connecter</button>
                </div>

                <div class="text-center small text-no-color mt-3">
                    Pas encore inscrit ? <a href="{{ path('login_signup') }}" class="text-decoration-none">Cr√©er un compte</a>
                </div>

                <input type="hidden" name="_target_path" value="/">


            </form>
        </div>
    </div>
{% endblock %}
